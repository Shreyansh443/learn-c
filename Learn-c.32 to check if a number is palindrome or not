// A program to check a palindrome number
#include <stdio.h>

int main() {
    int n, reversed_n = 0, original_n;

    printf("Enter an integer: ");
    scanf("%d", &n);

    original_n = n;

    // Loop to reverse the number
    while (n != 0) {
        int remainder = n % 10;
        reversed_n = reversed_n * 10 + remainder;
        n /= 10;
    }

    // Check if the original and reversed numbers are equal
    if (original_n == reversed_n) {
        printf("%d is a palindrome number.\n", original_n);
    } else {
        printf("%d is not a palindrome number.\n", original_n);
    }

    return 0;
}
